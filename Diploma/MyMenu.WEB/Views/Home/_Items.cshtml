@model IEnumerable<BLL.DTO.RecipeDTO>

<div>
    @foreach (var item in Model)
    {
        using(Html.BeginForm("Recipe", "Home",item)) {
        <input type="submit" value="@item.Name" />
        }
        <div style="display: -webkit-box;">
            <img style="width: 300px; height: 359px;" src=@Html.DisplayFor(modelItem => item.ImageHref) />
            <div style="font-size:18px;line-height:22px;margin-bottom:6px">
                <div style="font-size: 18px;line-height: 22px; margin-bottom: 6px; margin-left: 47px;">
                    <div class="title">Ингредиенты</div>
                    @for (int i = 0; i < item.Products.Count; i++)
                    {
                        <div class="ingredient">
                            <span class="value">@item.ProductCopasity.ElementAt(i)</span>
                            <span class="type">@item.Products.ElementAt(i).Unit</span>
                            <span class="name">@item.Products.ElementAt(i).Name</span>
                        </div>
                    }
                </div>
            </div>
        </div>
        }
    </div>
