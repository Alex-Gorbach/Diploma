@model IEnumerable<BLL.DTO.RecipeDTO>
@{
    ViewBag.Title = "Home Page";
}


@*<img src="~/Content/flat,1000x1000,075,f.u5.jpg" style="width:300px;height:300px" />*@

@*@foreach (string country in ViewBag.Recipes)
{
    <p>@country</p>
